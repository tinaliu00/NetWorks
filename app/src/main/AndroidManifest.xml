<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs125_illinois_students.github.com.networks">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Settings"
            android:label="@string/settings">
        </activity>
        <activity android:name=".Generate"
            android:label="@string/generate">
        </activity>
        <activity android:name=".Encrypt"
            android:label="@string/encrypt">
        </activity>
        <activity android:name=".MyPublicKey"
            android:label="@string/publickey">
        </activity>
        <activity android:name=".MyPrivateKey"
            android:label="@string/privatekey">
        </activity>
        <activity android:name=".ShowEncrypt"
            android:label="@string/showencrypt">
        </activity>
        <activity android:name=".ShowDecrypt"
            android:label="@string/showdecrypt">
        </activity>
    </application>

</manifest>